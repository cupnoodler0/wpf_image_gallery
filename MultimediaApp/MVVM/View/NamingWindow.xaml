<Window x:Class="MultimediaApp.NamingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultimediaApp"
        mc:Ignorable="d"
        Height="150" Width="252"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <local:NamingViewModel/>
    </Window.DataContext>

    <!--
        #494949
        #7c7a7a
        #ff5d73    
    -->

    <Border Background="#494949">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Border Background="Black"
                    MouseDown="Border_MouseDown"
                    Margin="0,0,0,8">

                <Grid HorizontalAlignment="Stretch">
                    <Label Content=""
                           Foreground="White"
                           FontWeight="SemiBold"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Width="20" Height="20"
                                Content="❌"
                                Padding="0,0,0,1.47"
                                FontSize="10.5"
                                Foreground="#ff5d73"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <TextBox x:Name="NameForm"
                     Grid.Row="1"
                     HorizontalAlignment="Left"
                     Margin="85,0,0,5"
                     Width="157"
                     Text="{Binding PicName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                     <!--Style="{StaticResource FormTextbox}"-->
            <TextBox x:Name="CategoryForm"
                     Grid.Row="2"
                     HorizontalAlignment="Left"
                     Margin="85,0,0,5"
                     Width="157"
                     Text="{Binding PicTags, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                     <!--Style="{StaticResource FormTextbox}"-->
            <TextBox x:Name="PathForm"
                     Grid.Row="3"
                     HorizontalAlignment="Left"
                     Margin="85,0,0,5"
                     Width="128"
                     Text="{Binding PicPath}"/>
                     <!--Style="{StaticResource FormTextbox}"-->
            <Button Content=". . ."
                    Height="16"
                    Margin="218,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0.7" Grid.Row="3"
                    Command="{Binding OpenFileDialogCommand}"/>
            <Button Content="Add"
                    Height="20"
                    Margin="10,0,10,10"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0.7" Grid.Row="4"
                    Command="{Binding GetCommand}"/>
            <Label Content="Name:"
                   Foreground="White"
                   Margin="31,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Height="28" Width="44"                   
                   Grid.Row="1"/>
            <Label Content="Category:"
                   Foreground="White"
                   Margin="15,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Height="28" Width="60"
                   Grid.Row="2"/>
            <Label Content="Path:"
                   Foreground="White"
                   Margin="40,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Height="28" Width="35"
                   Grid.Row="3"/>
        </Grid>
    </Border>

</Window>
